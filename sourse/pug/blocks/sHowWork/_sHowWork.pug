mixin sHowWork(data)
	// start sHowWork
	+b.SECTION.sHowWork.section#sHowWork&attributes(attributes)
		.container
			+b.section-title
				h2 Как мы работаем над вашим заказом
				p Простая схема работы для взаимодействия с нашими клиентами
			mixin item(img, i, text, btn=false)
				+e.item
					+img(`img/svg/sHowWork-img-${img}.svg`)
					span!= i
					+e.text!= text
					if btn
						+e.btn(href="#" data-src="modal-apply2" data-fancybox="modal").btn.btn-primary Заказать расчет
					+e.dropdown
						p Мы встретимся с вами в удобном для вас месте и обсудим все детали заказа
			+e.row.row
				+e.col.col-lg-2.col-md-4.col-6
					+item(1, 1, 'Предварительный расчет', true)
				+e.col.col-lg-2.col-md-4.col-6
					+item(2, 2, 'Встреча и обсуждение эскиза')
				+e.col.col-lg-2.col-md-4.col-6
					+item(3, 3, 'Заключение договора')
				+e.col.col-lg-2.col-md-4.col-6
					+item(4, 4, 'Производство мебели')
				+e.col.col-lg-2.col-md-4.col-6
					+item(5, 5, 'Доставка')
				+e.col.col-lg-2.col-md-4.col-6
					+item(6, 6, 'Установка')
	// end sHowWork