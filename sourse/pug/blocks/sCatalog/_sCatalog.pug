mixin productTags(...items)
	+b.tags-list.UL
		-for (var i = 0; i < items.length; i++)
			+e.item.LI
				+e.btn.BUTTON= items[i]
		+e.item.LI
			.btn.btn-outline-primary Показать все
	// /.tags-list

mixin catalogRowItem(img,title,price)
	+b.catalog-item(href="#")
		+img(`img/prod-${img}.jpg`)
		+e.text
			+e.title= title 
			+e.price= price

mixin catalogSlider
	+b.slider-catalog--js.swiper
		.swiper-wrapper
			+e.slide.swiper-slide
				+catalogRowItem(`1`,`КУХНИ НА ЗАКАЗ`,`от 125 000 руб.`)
			+e.slide.swiper-slide
				+catalogRowItem(`2`,`МЕБЕЛЬ В ДЕТСКУЮ`,`от 125 000 руб.`)
			+e.slide.swiper-slide
				+catalogRowItem(`3`,`СТОЛОВЫЕ ГРУППЫ`,`от 125 000 руб.`)

mixin product-item(i, t, p ,pr)
	+b.product-item
		+e.img-wrap(href="#")
			//- если надо картинку по центру  вывести использовать обертку .img-wrap-center  - если нет- убираем
			.img-wrap-center 
				+img(`img/prod-${i}.jpg`)
		+e.caption
			+e.title!= t
			+e.text!= p
			+e.price!= pr
			+e.btn(href='#')
	// /.product-item

