	+b.slider-more--js.swiper
		.swiper-wrapper
			+e.slide.swiper-slide
				+product-item('1')
			+e.slide.swiper-slide
				+product-item('2')
			+e.slide.swiper-slide
				+product-item('3')
			+e.slide.swiper-slide
				+product-item('4')
			+e.slide.swiper-slide
				+product-item('5')
		+e.controls
			.swiper-pagination
			.arrow-wrap
				+arrow

mixin product-item(img, title="Кухня Дестини", total='110 900 р', price='18 900 р')
	+b.product-item
		+e.img-wrap
			+e.slider-wrapper
				+e.slider--js.swiper
					.swiper-wrapper
						.swiper-slide
							+img(`img/prod-${img}.jpg`)
						.swiper-slide
							+img(`img/prod-${img}.jpg`)
					+arrow
			+e.buttons
				+e.compare-btn.BUTTON 
					+icon('compare')
				+e.fave-btn.BUTTON  
					+icon('fave')
			+e.tags
				+e.tag--discount Скидка 15%
				+e.tag--guarantee Гарантия 5 лет
				+e.tag--promo Акция
			+e.title(href="#")!= title
		+e.descr
			+e.text Сравните цену в разных материалах 
				a(href="#", data-bs-toggle="tooltip" data-bs-title="Default tooltip")
					+icon('question')
			+e.text-row
				+e.text-left.FORM
					+e.text-title Фасад верх
					+e.form-row
						+in-c('radio','ПВХ','front-up')
						+in-c('radio','ПЛАСТИК','front-up')
				+e.text-right.FORM
					+e.text-title Фасад верх
					+e.form-row
						+in-c('radio','ПВХ','front-down')
						+in-c('radio','ПЛАСТИК','front-down')
			+e.text-row
				+e.text-left
					+e.text-title Стоимость кухни от
					+e.price= total
				+e.text-right
					+e.text-title.d-none.d-lg-block Цена погонного метра
						+icon('question')
					+e.text-title.d-lg-none Цена п.м.
						+icon('question')
					+e.price= price
	// /.product-item

