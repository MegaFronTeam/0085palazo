mixin productTags(show,...items)
	.tags-slider
		+b.tags-list--js.swiper.UL(data-mobile="false")
			.swiper-wrapper
				-for (var i = 0; i < items.length; i++)
					+e.item.swiper-slide.LI
						+e.btn.BUTTON= items[i]
				if show
					+e.item.swiper-slide.LI
						.btn.btn-outline-primary Показать все
	// /.tags-list

mixin catalogRowItem(img,title,price='125 000 руб.')
	+b.catalog-item(href="#")
		+img(`img/prod-${img}.jpg`)
		+e.text
			+e.title= title
			+e.price!= price

mixin catalogRowItem2(img,title,price='125 000 руб.')
	+b.catalog-item--2(href="#")
		+e.img-wrap
			+e.slider-wrapper
				+e.slider--js.swiper
					.swiper-wrapper
						.swiper-slide
							+img(`img/prod-${img}.jpg`)
						.swiper-slide
							+img(`img/prod-${img}.jpg`)
					+arrow
		+e.text
			+e.title= title
			+e.price!= price

mixin categorySlider
	+b.slider-category--js.swiper
		.swiper-wrapper
			+e.slide.swiper-slide
				+catalogRowItem(`1`,`КУХНИ НА ЗАКАЗ`,`от 125 000 руб.`)
			+e.slide.swiper-slide
				+catalogRowItem(`2`,`МЕБЕЛЬ В ДЕТСКУЮ`,`от 125 000 руб.`)
			+e.slide.swiper-slide
				+catalogRowItem(`3`,`СТОЛОВЫЕ ГРУППЫ`,`от 125 000 руб.`)

