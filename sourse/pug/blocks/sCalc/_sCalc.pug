									| см
							+e.vertical-position--left
								div.vertical-slider.vertical-slider-1
								.size
									.field.field2
									| см
							+e.vertical-position--right
								div.vertical-slider.vertical-slider-2
								.size
									.field.field3
									| см
							//- +e.position--bottom
							//- 	div.slider-2
