				.col-lg-5
					+e.col-wrap
						+e.select-wrap
							+e.subtitle.d-none.d-lg-block
								span 2
								| Выберите материал фасада
							+e.subtitle.d-block.d-lg-none
								span 2
								| материал фасада
							+input('Выберите', 'select')
						+e.select-wrap
							+e.subtitle.d-none.d-lg-block
