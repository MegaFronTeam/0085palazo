mixin sCalc(data)
	// start sCalc
	+b.SECTION.sCalc.section#sCalc&attributes(attributes)
		.container
			+b.section-title
				h2 РАССЧИТАЙТЕ СТОИМОСТЬ КУХНИ ВАШЕЙ МЕЧТЫ ЗА 1 МИНУТУ!
				p 1156 клиентов уже воспользовались этой услугой
			+e.headset-row.row
				.col-12
					+e.subtitle.d-none.d-lg-block
						span 1
						| Выберите вид гарнитура и укажите его размеры
					+e.subtitle.d-block.d-lg-none
						span 1
						| вид гарнитура 
				.col-12.d-block.d-lg-none
					+select('', 'Прямой', 'Г-образный (левый)', 'Г-образный (правый)', 'П-образный', 'Параллельный')
				mixin headset-item(img, text, value, checked)
					label
						+e.SPAN.headset-item
							input(type="radio" name="headset" value= value checked= checked)
							+e.SPAN.img-wrap
								+img(`img/svg/headset-${img}.svg`).non-checked
								+img(`img/svg/headset-${img}-checked.svg`).checked
							+e.SPAN.text!= text
				+e.headset-col.col-auto.d-none.d-lg-block
					+headset-item(1, 'Прямой', "t-cost", 'checked')
				+e.headset-col.col-auto.d-none.d-lg-block
					+headset-item(2, 'Г-образный (левый)', "g-cost-l")
				+e.headset-col.col-auto.d-none.d-lg-block
					+headset-item(3, 'Г-образный (правый)', "g-cost-r")
				+e.headset-col.col-auto.d-none.d-lg-block
					+headset-item(4, 'П-образный', "p-cost")
				+e.headset-col.col-auto.d-none.d-lg-block
					+headset-item(5, 'Параллельный', "d-cost")
			+e.body-row.row
				.col-lg-7
					+e.size-row.row.d-flex.d-lg-none
						.col-6
							+e.size-text Общая длина гарнитура, см
						.col-6
							+input('', 'text')
					.d-none.d-lg-block
